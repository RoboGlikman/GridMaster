<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp"
    android:backgroundTint="@color/transparent_black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <TextView
            android:id="@+id/tv_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mode: Classic"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold|italic"
            android:paddingBottom="8dp"
            android:textSize="20sp"
            android:gravity="center"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="8dp">

     <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/player1Img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ximage"
                    android:contentDescription="Player 1 Icon"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="12dp"/>

                <TextView
                    android:id="@+id/tv_player_1_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Player 1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="20sp"
                    android:textStyle="italic|bold"
                    android:gravity="left"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/player2Img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/blue_circle"
                    android:contentDescription="Player 2 Icon"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tv_player_2_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Player 2"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="20sp"
                    android:textStyle="italic|bold"
                    android:gravity="left"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_winner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Winner: Player 1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold|italic"
            android:textSize="20sp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
